<div class="page-content page-container" id="page-content">
    <div class="padding">
        <div class="row container d-flex justify-content-center">
            <div class="col-xl-6 col-md-12">
                <div class="card user-card-full">
                    <div class="row m-l-0 m-r-0" >
                        <div class="col-sm-4 bg-c-lite-green user-profile">
                            <div class="card-block text-center text-white">
                                <div class="m-b-25"> <img src="@Url.Content(Model.ProfImage)" class="img-circle" alt="User-Profile-Image" width="200" height="200"> </div>

                                <h3 class="f-w-600">@Html.DisplayFor(model => model.FirstName)  @Html.DisplayFor(model => model.LastName)</h3>
                                <p>Author</p> <i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>

                                @Html.Partial("_PartialEdit")
                                

                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="card-block">
                                <h4 class="m-b-20 p-b-5 b-b-default f-w-600" ">➼ Information :</h4>
                                <div class="row" style="padding-bottom: 20px; padding-left: 30px;">
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Email</p>
                                        <h6 class="text-muted f-w-400"> @Html.DisplayFor(model => model.Email) </h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Phone</p>
                                        <h6 class="text-muted f-w-400">@Html.DisplayFor(model => model.Mobile)</h6>
                                    </div>
                                </div>
                                <h4 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">➼ University info :</h4>
                                <div class="row" style="padding-left: 30px;">
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Recent</p>
                                        <h6 class="text-muted f-w-400">@Html.DisplayFor(model => model.University)</h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Department</p>
                                        <h6 class="text-muted f-w-400">@Html.DisplayFor(model => model.Department)</h6>
                                        @if ((int)Session["AuthID"] == Model.AuthorID) {
                                        <div style="margin-left:7%; margin-top: 50px;">@Html.ActionLink("[+] Add Research", "Create", "Papers", new { id = Model.AuthorID }, new { @class = "btn btn-success btn-lg" })</div>
                                        }
                                    </div>

                                </div>


                                <div style="margin-left:56%; margin-top: 20px;">
                                    <a href="@Url.Action("ShowMyPapers","Authors", new { id = Model.AuthorID })" class="btn btn-success btn-lg ">
                                        <span class="glyphicon glyphicon-eye-open"></span>
                                        |Show Researchs
                                    </a>
                                </div>

                                <br />




                                <ul class="social-link list-unstyled m-t-40 m-b-10">
                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="facebook" data-abc="true"><i class="mdi mdi-facebook feather icon-facebook facebook" aria-hidden="true"></i></a></li>
                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="twitter" data-abc="true"><i class="mdi mdi-twitter feather icon-twitter twitter" aria-hidden="true"></i></a></li>
                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="instagram" data-abc="true"><i class="mdi mdi-instagram feather icon-instagram instagram" aria-hidden="true"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
 
</div>



