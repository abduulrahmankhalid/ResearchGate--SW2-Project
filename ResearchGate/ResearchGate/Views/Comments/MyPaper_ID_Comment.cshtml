@model IEnumerable<ResearchGate.Models.Comment>

@{
    ViewBag.Title = "MyPaper_ID_Comment";
}

<h2>MyPaper_ID_Comment</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Commnt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Paper.Title)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Commnt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paper.Title)
            </td>
        </tr>
    }


    @foreach (var item in Model)
    {
        <tr>


            <td>
                <a href="@Url.Action("Create", "Comments", new { id = item.Paper.PaperID })" class="btn btn-warning" style="position:fixed;">
                    <span class="glyphicon glyphicon-pencil"></span>
                    Add New Comment
                </a>
            </td>

        </tr> break;
    }

</table>
